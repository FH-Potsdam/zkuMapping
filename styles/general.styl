body
	position absolute
	font-family $mainFontFamily
	font-size 16px
	font-weight 400
	line-height 1.4em
	letter-spacing .02em
	background white
	width 100%
	height 100%

	@media screen and (max-width: 920px)
		font-size 14px

	#__next
		position relative
		top 0
		left 0
		width 100%
		height 100%

button
	font-size inherit
	font-family inherit
	letter-spacing inherit
	background none
	border none
