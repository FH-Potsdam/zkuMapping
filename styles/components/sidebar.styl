.sidebar
	width 270px
	height 100%
	box-sizing border-box
	position fixed
	top 0
	left 0
	padding-top 75px

	.sidebar-options
		position absolute
		top 0
		left 0
		box-sizing border-box
		padding 8px
		width 100%
		height 100%
		overflow-x hidden
		overflow-y scroll

		.sidebar-option
			padding 16px
			margin-bottom 8px
			list-style none
			position relative
			border-radius 3px
			cursor pointer
			color var(--optioncolor)
			box-sizing border-box
			box-shadow inset 0 0 0 1px var(--optioncolor),
				0 0 0 0 var(--optioncolor)
			transition box-shadow 100ms ease-out,
				opacity 50ms ease-out,
				background-color 200ms ease-out,
				color 200ms ease-out
			transition-delay 0ms, 0ms, 100ms, 100ms
			opacity 1

			&:active
				opacity .8

			&:hover
				box-shadow inset 0 0 0 2px var(--optioncolor),
					0 0 0 1px var(--optioncolor)

			&.active
				color white
				background-color var(--optioncolor)

			input[type="checkbox"]
				position absolute
				top 50%
				left 16px
				transform translateY(-60%)

			.sidebar-option-title
				margin-bottom 8px
				font-weight 400

			.sidebar-option-description
				opacity .64
				font-size 14px
				line-height 15px
